<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".convert_to"
    android:background="#ec2c73"
    android:id="@+id/rl_convert">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONVERTER"
            android:gravity="center"
            android:textSize="50dp"
            android:id="@+id/header"
            android:textColor="#000001"
            android:background="#ffffff" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the marks for which test is coducted"
        android:id="@+id/total_marks"
        android:textSize="25dip"
        android:gravity="center"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textColorHighlight="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="               "
        android:gravity="center"
        android:textColor="#010101"
        android:textSize="25dp"
        android:layout_marginTop="176dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/enter_total_marks"
        android:phoneNumber="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the percentage to which marks have to be converted"
        android:id="@+id/reduction"
        android:textSize="25dip"
        android:gravity="center"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="206dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textColorHighlight="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="               "
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#010101"
        android:layout_marginTop="356dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/enter_recduction_marks"
        android:phoneNumber="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/next"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#010101"
        android:onClick="onDivideClick" />
</RelativeLayout>
